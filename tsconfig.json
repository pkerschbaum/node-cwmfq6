{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2018",

    /* Modules */
    "moduleResolution": "node16",
    "types": [],

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
